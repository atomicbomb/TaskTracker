<Window x:Class="TaskTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTracker"
        mc:Ignorable="d"
        Title="TaskTracker - Main" 
        Height="600" 
        Width="800"
        MinHeight="400" 
        MinWidth="600"
        Style="{StaticResource MainWindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="TaskTracker" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="{StaticResource TextPrimaryBrush}"/>
        
    <!-- Main Content -->
    <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Status Section -->
        <Border Grid.Row="0" 
                    Background="{StaticResource CardBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
            Padding="20" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Status Summary" FontSize="18" FontWeight="SemiBold"/>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="Tracking Status:" FontWeight="SemiBold" Width="120"/>
                        <TextBlock Text="{Binding TrackingStatus}" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <TextBlock Text="Current Task:" FontWeight="SemiBold" Width="120"/>
                        <TextBlock Text="{Binding CurrentTaskDisplay}" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                    <!-- Lunch Timer Section -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,24,0,0" Visibility="{Binding IsOnLunchBreak, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="At Lunch:" FontWeight="SemiBold" Width="120"/>
                        <TextBlock Text="{Binding LunchTimeRemaining}" Width="80"/>
                        <Button Content="Cancel Lunch" Command="{Binding CancelLunchCommand}" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Navigation Buttons -->
            <Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Row 1 -->
                <Button Grid.Row="0" Grid.Column="0" 
                        Content="View Summary" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding ShowSummaryCommand}"
                        Margin="5"/>
                        
                <Button Grid.Row="0" Grid.Column="1" 
                        Content="Settings" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ShowSettingsCommand}"
                        Margin="5"/>
                
                <!-- Row 2 -->
                <Button Grid.Row="1" Grid.Column="0" 
                        Content="JIRA Projects" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ShowJiraProjectsCommand}"
                        Margin="5"/>
                        
                <Button Grid.Row="1" Grid.Column="1" 
                        Content="JIRA Tasks" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ShowJiraTasksCommand}"
                        Margin="5"/>
                
                <!-- Row 3 -->
        <Button Grid.Row="2" Grid.Column="0" 
            Content="Manual Task Update" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding TestTaskPromptCommand}"
                        Margin="5"/>
                        
                <Button Grid.Row="2" Grid.Column="1" 
                        Content="Minimize to Tray" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding MinimizeToTrayCommand}"
                        Margin="5"/>
                
                <!-- Row 4 -->
        <Button Grid.Row="3" Grid.Column="0"
            Content="View Logs" 
            Style="{StaticResource SecondaryButtonStyle}"
            Command="{Binding ShowLogsCommand}"
            Margin="5"/>
        <Button Grid.Row="3" Grid.Column="1"
            Content="Exit Application" 
            Style="{StaticResource SecondaryButtonStyle}"
            Command="{Binding ExitApplicationCommand}"
            Margin="5"/>
            </Grid>
        </Grid>
        
        <!-- Footer -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <TextBlock Text="{Binding StatusText}" 
                       Foreground="{StaticResource TextTertiaryBrush}" 
                       FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
