<Window x:Class="TaskTracker.Views.SummaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TaskTracker.Views"
        Title="Time Tracking Summary - TaskTracker" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        MinHeight="500"
        MinWidth="800"
        Background="{DynamicResource Background}"
        Foreground="{DynamicResource Foreground}">
    
    <Window.Resources>
        <Style x:Key="LunchRowStyle" TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Task.JiraTaskNumber}" Value="LUNCH">
                    <Setter Property="Background" Value="#FFFFE5E5"/>
                    <Setter Property="ToolTip" Value="Lunch break (not billable)"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Bool to visibility inverter -->
        <local:InverseBoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        
        <!-- View selector converter -->
        <local:StringToBooleanConverter x:Key="StringToBooleanConverter" />
    <!-- String equals to Visibility converter -->
    <local:StringEqualsToVisibilityConverter x:Key="StringEqualsToVisibilityConverter" />
    <!-- String in list to Visibility converter -->
    <local:StringInListToVisibilityConverter x:Key="StringInListToVisibilityConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource AccentBackground}"
                Padding="20,15">
            <StackPanel>
                <TextBlock Text="Time Tracking Summary" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="{DynamicResource AccentForeground}" />
                <TextBlock Text="View your daily and weekly time tracking summaries"
                          FontSize="12"
                          Opacity="0.8"
                          Foreground="{DynamicResource AccentForeground}" />
            </StackPanel>
        </Border>
        
        <!-- Navigation and View Selection -->
        <Border Grid.Row="1" 
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- View Selection -->
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Text="View:" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"
                              FontWeight="SemiBold" />
                    
                    <RadioButton Content="Daily" 
                                GroupName="ViewMode"
                                IsChecked="{Binding SelectedView, Converter={StaticResource StringToBooleanConverter}, ConverterParameter=Daily}"
                                Margin="0,0,20,0" />
                    
                    <RadioButton Content="Weekly" 
                                GroupName="ViewMode"
                                IsChecked="{Binding SelectedView, Converter={StaticResource StringToBooleanConverter}, ConverterParameter=Weekly}"
                                Margin="0,0,20,0" />
                    
                    <RadioButton Content="Time Entries" 
                                GroupName="ViewMode"
                                IsChecked="{Binding SelectedView, Converter={StaticResource StringToBooleanConverter}, ConverterParameter=Entries}"
                                Margin="0,0,20,0" />
                </StackPanel>
                
                <!-- Date Navigation -->
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <!-- Daily/Entries Navigation -->
                    <StackPanel Orientation="Horizontal" 
                               Visibility="{Binding SelectedView, Converter={StaticResource StringInListToVisibilityConverter}, ConverterParameter=Daily|Entries}">
                        <Button Content="◀ Previous Day"
                               Command="{Binding PreviousDayCommand}"
                               Height="30"
                               Padding="10,0"
                               Margin="0,0,10,0"
                               Style="{DynamicResource ModernButtonStyle}" />
                        
                        <Button Content="Today"
                               Command="{Binding TodayCommand}"
                               Height="30"
                               Padding="15,0"
                               Margin="0,0,10,0"
                               Background="{DynamicResource AccentBackground}"
                               Foreground="{DynamicResource AccentForeground}"
                               Style="{DynamicResource ModernButtonStyle}" />
                        
                        <Button Content="Next Day ▶"
                               Command="{Binding NextDayCommand}"
                               Height="30"
                               Padding="10,0"
                               Margin="0,0,20,0"
                               Style="{DynamicResource ModernButtonStyle}" />
                        
                        <TextBlock Text="{Binding SelectedDate, StringFormat='dddd, MMMM dd, yyyy'}"
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  FontSize="14" />
                    </StackPanel>
                    
                    <!-- Weekly Navigation -->
                    <StackPanel Orientation="Horizontal" 
                               Visibility="{Binding SelectedView, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=Weekly}">
                        <Button Content="◀ Previous Week"
                               Command="{Binding PreviousWeekCommand}"
                               Height="30"
                               Padding="10,0"
                               Margin="0,0,10,0"
                               Style="{DynamicResource ModernButtonStyle}" />
                        
                        <Button Content="This Week"
                               Command="{Binding ThisWeekCommand}"
                               Height="30"
                               Padding="15,0"
                               Margin="0,0,10,0"
                               Background="{DynamicResource AccentBackground}"
                               Foreground="{DynamicResource AccentForeground}"
                               Style="{DynamicResource ModernButtonStyle}" />
                        
                        <Button Content="Next Week ▶"
                               Command="{Binding NextWeekCommand}"
                               Height="30"
                               Padding="10,0"
                               Margin="0,0,20,0"
                               Style="{DynamicResource ModernButtonStyle}" />
                        
                        <TextBlock VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  FontSize="14">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="Week of {0:MMM dd} - {1:MMM dd, yyyy}">
                                    <Binding Path="SelectedDate" />
                                    <Binding Path="SelectedDate" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                    
            <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,0,0">
            <Button Content="Add Entry"
                Command="{Binding AddEntryCommand}"
                Height="30"
                Padding="15,0"
                Margin="0,0,10,0"
                Background="{DynamicResource AccentBackground}"
                Foreground="{DynamicResource AccentForeground}"
                Visibility="{Binding SelectedView, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=Entries}"
                Style="{DynamicResource ModernButtonStyle}" />
            <Button Content="Refresh"
                Command="{Binding RefreshCommand}"
                Height="30"
                Padding="15,0"
                Margin="0,0,10,0"
                Style="{DynamicResource ModernButtonStyle}" />
            <Button Content="Export"
                Command="{Binding ExportCommand}"
                Height="30"
                Padding="15,0"
                Background="{DynamicResource SecondaryButtonBackground}"
                Foreground="{DynamicResource SecondaryButtonForeground}"
                Style="{DynamicResource ModernButtonStyle}" />
            </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Border Grid.Row="2"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Margin="20,20,20,0">
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <!-- Loading indicator -->
                    <StackPanel HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ProgressBar IsIndeterminate="True" 
                                    Width="200" 
                                    Height="4" 
                                    Margin="0,0,0,20"
                                    Background="{DynamicResource Background}"
                                    Foreground="{DynamicResource AccentBackground}" />
                        <TextBlock Text="Loading summary data..."
                                  HorizontalAlignment="Center"
                                  FontStyle="Italic"
                                  Opacity="0.7" />
                    </StackPanel>
                    
                    <!-- Daily Summary View -->
                    <StackPanel Visibility="{Binding SelectedView, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=Daily}"
                               Margin="20">
                        <TextBlock Text="{Binding DailySummary.DateDisplay, Mode=OneWay}"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10" />
                        
                        <TextBlock FontSize="14" Margin="0,0,0,20">
                            <Run Text="Total Time: " />
                            <Run Text="{Binding DailySummary.TotalTimeDisplay, Mode=OneWay}" 
                                 FontWeight="Bold" 
                                 Foreground="{DynamicResource AccentBackground}" />
                        </TextBlock>
                        
                        <TextBlock Text="Tasks Worked On:"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,10" />
                        
                        <ItemsControl ItemsSource="{Binding DailySummary.TaskSummaries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource AlternateRowBackground}"
                                           BorderBrush="{DynamicResource BorderBrush}"
                                           BorderThickness="1"
                                           CornerRadius="4"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock>
                                                    <Run Text="{Binding ProjectName}" 
                                                         FontWeight="SemiBold" />
                                                    <Run Text=" - " />
                                                    <Run Text="{Binding TaskNumber}" 
                                                         FontWeight="Bold" />
                                                </TextBlock>
                                                <TextBlock Text="{Binding TaskSummary}"
                                                          Opacity="0.8"
                                                          TextWrapping="Wrap"
                                                          Margin="0,5,0,0" />
                                                <TextBlock Text="{Binding EntryCountDisplay, Mode=OneWay}"
                                                          FontSize="11"
                                                          Opacity="0.6"
                                                          Margin="0,5,0,0" />
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1"
                                                      Text="{Binding TimeSpentDisplay, Mode=OneWay}"
                                                      FontSize="18"
                                                      FontWeight="Bold"
                                                      Foreground="{DynamicResource AccentBackground}"
                                                      VerticalAlignment="Center"
                                                      Margin="20,0,0,0" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Weekly Summary View -->
                    <StackPanel Visibility="{Binding SelectedView, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=Weekly}"
                               Margin="20">
                        <TextBlock Text="{Binding WeeklySummary.WeekDisplay, Mode=OneWay}"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Margin="0,0,0,10" />
                        
                        <TextBlock FontSize="14" Margin="0,0,0,20">
                            <Run Text="Total Time: " />
                            <Run Text="{Binding WeeklySummary.TotalTimeDisplay, Mode=OneWay}" 
                                 FontWeight="Bold" 
                                 Foreground="{DynamicResource AccentBackground}" />
                        </TextBlock>
                        
                        <ItemsControl ItemsSource="{Binding WeeklySummary.DailySummaries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource AlternateRowBackground}"
                                           BorderBrush="{DynamicResource BorderBrush}"
                                           BorderThickness="1"
                                           CornerRadius="4"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,10">
                                                <TextBlock Text="{Binding DateDisplay}" 
                                                          FontWeight="SemiBold"
                                                          HorizontalAlignment="Left" />
                                                <TextBlock Text="{Binding TotalTimeDisplay, Mode=OneWay}"
                                                          FontWeight="Bold"
                                                          Foreground="{DynamicResource AccentBackground}"
                                                          HorizontalAlignment="Right" />
                                            </Grid>
                                            
                                            <ItemsControl ItemsSource="{Binding TaskSummaries}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="0,2">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock Grid.Column="0">
                                                                <Run Text="{Binding TaskNumber}" FontWeight="SemiBold" />
                                                                <Run Text=" - " />
                                                                <Run Text="{Binding TaskSummary}" />
                                                            </TextBlock>
                                                            
                                                            <TextBlock Grid.Column="1"
                                                                      Text="{Binding TimeSpentDisplay, Mode=OneWay}"
                                                                      FontWeight="SemiBold" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                    
                    <!-- Time Entries View -->
                    <DataGrid x:Name="EntriesGrid"
                             Visibility="{Binding SelectedView, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=Entries}"
                             ItemsSource="{Binding TimeEntries}"
                             SelectedItem="{Binding SelectedEntry, Mode=TwoWay}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             SelectionMode="Single"
                             Margin="20"
                             Background="{DynamicResource CardBackground}"
                             Foreground="{DynamicResource Foreground}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             RowBackground="{DynamicResource CardBackground}"
                             AlternatingRowBackground="{DynamicResource AlternateRowBackground}"
                             RowStyle="{StaticResource LunchRowStyle}"
                             CellEditEnding="EntriesGrid_CellEditEnding">
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" 
                                               Binding="{Binding StartTime, StringFormat='{}{0:MM/dd/yyyy}'}"
                                               Width="100"
                                               IsReadOnly="True" />
                            
                            <DataGridTemplateColumn Header="Start" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding StartTime, StringFormat='{}{0:HH:mm}'}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding StartTime, StringFormat='{}{0:HH:mm}', Mode=OneWay}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="End" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <Binding Path="EndTime" StringFormat="{}{0:HH:mm}">
                                                    <Binding.FallbackValue>—</Binding.FallbackValue>
                                                </Binding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding EndTime, StringFormat='{}{0:HH:mm}', Mode=OneWay}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="Duration" 
                                               Binding="{Binding DurationMinutes, StringFormat='{}{0} min'}"
                                               Width="80"
                                               IsReadOnly="True" />
                            
                            <DataGridTextColumn Header="Project" 
                                               Binding="{Binding Task.Project.ProjectName}"
                                               Width="120"
                                               IsReadOnly="True" />
                            
                            <DataGridTemplateColumn Header="Task #" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Task.JiraTaskNumber}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <!-- OneWay to avoid mutating the shared JiraTask instance; we apply changes in code-behind -->
                                        <TextBox Text="{Binding Task.JiraTaskNumber, Mode=OneWay}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            
                            <DataGridTextColumn Header="Summary" 
                                               Binding="{Binding Task.Summary}"
                                               Width="*"
                                               IsReadOnly="True" />

                            <!-- Delete Column -->
                            <DataGridTemplateColumn Header="" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                    <Button Content="Delete"
                        Command="{Binding DataContext.DeleteEntryCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                        CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </ScrollViewer>
        </Border>
        
        <!-- Action Buttons -->
        <Border Grid.Row="3"
                Background="{DynamicResource CardBackground}"
                Padding="20,15"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="Close"
                       Height="35"
                       Padding="20,0"
                       Command="{Binding CloseCommand}"
                       Background="{DynamicResource SecondaryButtonBackground}"
                       Foreground="{DynamicResource SecondaryButtonForeground}"
                       BorderBrush="{DynamicResource SecondaryButtonBorderBrush}"
                       Style="{DynamicResource ModernButtonStyle}" />
            </StackPanel>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="4" 
                Background="{DynamicResource StatusBarBackground}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,8">
            <TextBlock Text="{Binding StatusMessage}"
                      FontSize="11"
                      Foreground="{DynamicResource StatusBarForeground}" />
        </Border>
    </Grid>
</Window>
